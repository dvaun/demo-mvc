@{
    ViewData["Title"] = "Member Company List";
}

<div class="text-left flex-row d-flex justify-content-between align-items-center">
    <h1 class="p-2 display-4">Member Companies</h1>
    <div class="p-2">
        <a asp-area="" asp-controller="Home" asp-action="AddNewMemberCompany">
            <button type="button" class="btn btn-link">
                Add New Company
            </button>
        </a>
    </div>
</div>

<table class="table mb-5">
    <thead>
        <tr>
            <th scope="col">Company</th>
            <th scope="col">Membership Acronym</th>
            <th scope="col">Company ID#</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>@company.MembershipAcronym</td>
                    <td>@company.Id</td>
                </tr>
            }
        }
        else
        {
            <p>No Companies found!</p>
        }
    </tbody>
</table>