@{
    ViewData["Title"] = "Add New Company";
}

<div class="text-left">
    <h1 class="p-2 display-4">Add New Company</h1>
    <form asp-action="AddNewMemberCompany" method="post">
        <div class="row p-2">
            <div class="col">
                <label for="firstname" class="form-label">First name</label>
                <input type="text" id="firstname" name="FirstName" class="form-control" required />
            </div>
            <div class="col">
                <label for="lastname" class="form-label">Last name</label>
                <input type="text" id="lastname" name="LastName" class="form-control" required />
            </div>
        </div>
        <div class="row p-2">
            <div class="col">
                <label for="memberid" class="form-label">Membership #</label>
                <input type="text" id="memberid" name="MembershipID" class="form-control" required />
            </div>
            <div class="col">
                <label for="language" class="form-label">Language preference</label>
                <select id="language" name="LanguagePreference" class="form-select">
                    <option value="-1" selected>Select a language</option>
                    @foreach (var language in Enum.GetValues(typeof(Data.Models.LanguagePreference)))
                    {
                        <option value="@((int)language)">@language</option>
                    }
                </select>
            </div>
            <div class="col">
                <label for="phone" class="form-label">Phone number</label>
                <input type="tel" id="phone" name="PhoneNumber" class="form-control" />
            </div>
            <div class="col">
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="date" id="dob" name="DOB" class="form-control" required />
            </div>
        </div>
        <div class="p-2">
            <label for="address" class="form-label">Address</label>
            <input type="text" id="address" name="Address" class="form-control" />
        </div>
        <div class="p-2 mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-area="" asp-controller="Home" asp-action="Companies">
                <button type="button" class="btn btn-link">Cancel</button>
            </a>
        </div>
    </form>
</div>
